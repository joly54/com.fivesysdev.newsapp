<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:defaultNavHost="true"
    app:startDestination="@id/newsListFragment">

    <fragment
        android:id="@+id/newsListFragment"
        android:name="com.fivesysdev.newsapp.NewsListFragment"
        android:label="NewsListFragment" >
        <action
            android:id="@+id/action_newsListFragment_to_detailsFragment"
            app:destination="@id/detailsFragment">
        </action>
        <action
            android:id="@+id/action_newsListFragment_to_favoriteFragment"
            app:destination="@id/favoriteFragment" />

    </fragment>

    <fragment
        android:id="@+id/detailsFragment"
        android:name="com.fivesysdev.newsapp.DetailsFragment"
        android:label="fragment_details"
        tools:layout="@layout/fragment_details" />
    <fragment
        android:id="@+id/favoriteFragment"
        android:name="com.fivesysdev.newsapp.FavoriteFragment"
        android:label="FavoriteFragment" />
</navigation>