<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:defaultNavHost="true"
    app:startDestination="@id/newsListFragment">

    <activity
        android:id="@+id/mainActivity"
        android:name="com.fivesysdev.newsapp.MainActivity"
        android:label="activity_main"
        tools:layout="@layout/activity_main" />
    <fragment
        android:id="@+id/newsListFragment"
        android:name="com.fivesysdev.newsapp.NewsListFragment"
        android:label="NewsListFragment" >
        <action
            android:id="@+id/action_newsListFragment_to_detailsFragment"
            app:destination="@id/detailsFragment">
            <argument
                android:name="title"
                app:argType="string" />
            <argument
                android:name="description"
                app:argType="string" />
            <argument
                android:name="image_url"
                app:argType="string" />
        </action>

    </fragment>

    <fragment
        android:id="@+id/detailsFragment"
        android:name="com.fivesysdev.newsapp.DetailsFragment"
        android:label="fragment_details"
        tools:layout="@layout/fragment_details" />
</navigation>